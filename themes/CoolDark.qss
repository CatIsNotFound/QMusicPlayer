
/* CoolDark.qss */
/* 专为播放器设计的暗色主题样式 */
/* Version 1.0 */

* {
	background-color: #222222;
	selection-background-color: #5c9889;
	selection-color: #FFFFFF;
	color: #FFFFFF;
}

*:disabled {
	color: #4B4B4B;
	border-color: #4B4B4B;
}

*:active {
	border-color: #5c9889;
}

*::tab {
	background-color: #2B2B2B;
	color: #FFFFFF;
}

*::tab::hover {
	background-color: #6B6B6B;
}

*::tab::selected {
	background-color: #5c9889;
	color: #FFFFFF;
}

*::item::selected {
	background-color: #5c9889;
	color: #FFFFFF;
}



QToolTip {
	color: black;
}

QComboBox {
	border: 1px solid #4B4B4B;
	border-radius: 4px;
}

QComboBox::drop-down {
	subcontrol-origin: padding;
	subcontrol-position: top right;
	width: 15px;

	border-left-width: 1px;
	border-left-color: darkgray;
	border-left-style: solid; /* just a single line */
	border-top-right-radius: 3px; /* same radius as the QComboBox */
	border-bottom-right-radius: 3px;
}

QComboBox::down-arrow {
	image: url(:/assets/drop_down.svg);
	width: 20px;
	height: 20px;
}

QCheckBox::indicator:unchecked {
	image: url(:/assets/unchecked.svg);
	width: 20px;
	height: 20px;
}

QCheckBox::indicator:checked {
	image: url(:/assets/checked.svg);
	width: 20px;
	height: 20px;
}

QComboBox:hover {
	background-color: #4B4B4B;
}

QComboBox:selected {
	selection-background-color: #2B2B2B;
}

QMenuBar {
    background-color: #222222;
}

QMenuBar::item::checked {
	background-color: #4B4B4B;
}

QMenu {
	background-color: #4B4B4B;
}

QPushButton {
	border: 1px solid #4B4B4B;
	border-radius: 4px;
	color: #FFFFFF;
}

QToolButton:hover, QPushButton:hover {
	background-color: #6B6B6B;
}

QToolButton:pressed, QPushButton:pressed {
	background-color: #5c9889;
}

QToolButton:checked, QPushButton:checked {
	background-color: #4B4B4B;
}

QToolButton {
    border: 0px;
	border-bottom: 2px;
	border-radius: 6px;
	background-color: #2B2B2B;
	padding: 4px;
}

QTableView QTableWidget {
	color: #4B4B4B;
	border: 0px;
	gridline-color: #2B2B2B;
}

QSlider::groove:horizontal {
	border: 1px solid #6B6B6B;
	border-radius: 2px;
	height: 4px; /* the groove expands to the size of the slider by default. by giving it a height, it has a fixed size */
	margin: 4px 0;
	background: qlineargradient(x1:0, y1:0, x2:0, y2:1, stop:0 #C4C4C4, stop:1 #F8F8F8);
}

QSlider::sub-page:horizontal {
	border: 1px solid #6B6B6B;
	border-radius: 2px;
	height: 4px; /* the groove expands to the size of the slider by default. by giving it a height, it has a fixed size */
	margin: 4px 0;
	background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #76c2af, stop:1 #5c9889);
}

QSlider::handle:horizontal {
	background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #76c2af, stop:1 #5c9889);
	border: 1px solid #6B6B6B;
	width: 16px;
	margin: -7px -1px; /* handle is placed by default on the contents rect of the groove. Expand outside the groove */
	border-radius: 9px;
}

QSlider::handle:horizontal:hover {
	background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #9bf1db, stop:1 #76c2af);
}

QSlider::handle:horizontal:pressed {
	background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #5c9889, stop:1 #76c2af);
}

QTabBar:tab {
	border: 2px solid #2B2B2B;
	border-radius: 4px;
	border-bottom-left-radius: 0px;
	border-bottom-right-radius: 0px;
	padding: 4px 8px;
	background: #2B2B2B;
}

QTabWidget::tab-bar {
	alignment: center;
}

QTabWidget::pane {
	border: 0px;
}

QTabBar:tab:hover {
	background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #4B4B4B, stop:1 #2B2B2B);
}

QTabBar:tab:selected {
	background: qlineargradient(x1:0, y1:0, x2:1, y2:1, stop:0 #6B6B6B, stop:1 #4B4B4B);
}

QTableCornerButton::section {
	background: #222222;
	border: 0px;
}

QHeaderView::section {
     background-color: #222222;
     color: white;
     padding-left: 4px;
     border: 1px solid #1d1d1d;
}

QHeaderView::section:selected
{
   background-color: #5c9889;
}

QScrollBar::handle {
  background: #3B3B3B;
  border: 1px solid #222222;
  border-radius: 7px;
  min-height: 20px;
}

QScrollBar::handle:hover {
	background-color: #6B6B6B;
}

QScrollBar::handle::pressed {
	background-color: #5c9889;
}

QScrollBar:vertical {
	border: 0px solid grey;
	background: #222222;
	width: 15px;
	margin: 0px;
}

QScrollBar:horizontal {
	border: 0px solid grey;
	background: #222222;
	height: 15px;
	margin: 0px;
}

QScrollBar::add-line:vertical {
	border: 0px;
	background: #32CC99;
	height: 0px;
	subcontrol-position: bottom;
	subcontrol-origin: margin;
}

QScrollBar::sub-line:vertical {
	border: 0px;
	height: 0px;
	subcontrol-position: top;
	subcontrol-origin: margin;
}

QScrollBar::add-line:horizontal {
	width: 0px;
	subcontrol-position: right;
	subcontrol-origin: margin;
	border: 0px;
}

QScrollBar::sub-line:horizontal {
	width: 0px;
	subcontrol-position: top right;
	subcontrol-origin: margin;
	border: 0px;
}

QScrollBar::up-arrow:vertical, QScrollBar::down-arrow:vertical {
	border: 0px;
	width: 0px;
	height: 0px;
}

QScrollBar::left-arrow:horizontal, QScrollBar::right-arrow:horizontal {
	border: 0px;
	width: 0px;
	height: 0px;
}

QScrollBar::add-page, QScrollBar::sub-page {
	background: none;
}




